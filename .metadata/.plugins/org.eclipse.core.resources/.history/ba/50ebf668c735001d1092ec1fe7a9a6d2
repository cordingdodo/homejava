package homework;

import java.util.Scanner;

public class for문6 {

	public static void main(String[] args) {
		// 사용자로부터 숫자 한개를 입력받아 1부터 그 숫자까지의 합을 구해보자. ex) 입력받은 숫자 :5 /1부터 5까지의 합 : 15
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		
		int sum = 0;
		for(a=0;a<=num;a++){
			sum+=a;
			System.out.println("1부터"+num+"까지의합:"+sum);
		}

	}

}
